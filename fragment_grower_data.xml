<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SynchronizeDataFragment">


    <TextView
        android:id="@+id/txt_VillageListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/nav_synchronize_village"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgSyncVillageList"
        app:layout_constraintEnd_toStartOf="@+id/imgSyncVillageList"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSyncVillageList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/bg_shape_btn"
        android:src="@drawable/baseline_sync_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_VillageListTitle"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_VerityListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/nav_synchronize_verity"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txt_VillageListTitle"
        app:layout_constraintEnd_toStartOf="@+id/imgSyncVerityList"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSyncVerityList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/bg_shape_btn"
        android:src="@drawable/baseline_sync_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_VerityListTitle"
        app:layout_constraintTop_toBottomOf="@+id/imgSyncVillageList" />


    <TextView
        android:id="@+id/txt_GrowerListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="@string/nav_synchronize_grower"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txt_VerityListTitle"
        app:layout_constraintEnd_toStartOf="@+id/imgSyncGrowerList"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSyncGrowerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_shape_btn"
        android:src="@drawable/baseline_sync_24"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_GrowerListTitle"
        app:layout_constraintTop_toBottomOf="@+id/imgSyncVerityList" />


    <TextView
        android:id="@+id/txt_DownloadSurveyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/nav_download_surway"
        android:gravity="start"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnDownloadSurvey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_GrowerListTitle" />

    <ImageView
        android:id="@+id/btnDownloadSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_shape_btn"
        android:src="@drawable/baseline_save_alt_24"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imgSyncGrowerList" />


</androidx.constraintlayout.widget.ConstraintLayout>