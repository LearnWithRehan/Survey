<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:ignore="WebViewLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:strokeWidth="1.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGrowerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/farmer_name_ss"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtVillageCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/village_code_and_name_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtVerityCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verity_code_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtFarmerTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/farmer_transfer_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtPlotNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/plot_no_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtWardno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Ward_no_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
<!--                <TextView-->
<!--                    android:id="@+id/txtPlotcode"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/hint_plot_code"-->
<!--                    android:textSize="@dimen/_12ssp"-->
<!--                    android:textColor="@color/colorPrimary"/>-->
                <TextView
                    android:id="@+id/txtKitta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_plot_code"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtEast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/east"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtWest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/west"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtNorth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/north"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtSouth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/south"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtRPValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_value_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtShareHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_holder_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtSurveyDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_datetime_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtTotalArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_area_ss"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/btnUploadSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/bg_shape_btn"
                    android:src="@drawable/outline_file_upload_24"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_6sdp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</LinearLayout>


